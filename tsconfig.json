{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"types": ["node", "jest"],
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "Node",
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["**/*.test.ts", "node_modules", "test/**"]
}
